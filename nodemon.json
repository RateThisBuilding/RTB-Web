{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "babel-node"
  },
  "watch": [
    "src/server.js",
    "src/server/",
    "src/components/*.jsx",
    "src/containers/*.jsx",
    "src/db/"

  ],
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "ext": "js json jsx"
}
